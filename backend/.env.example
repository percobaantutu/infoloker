# ===========================================
# INFOLOKER BACKEND - PRODUCTION ENV TEMPLATE
# ===========================================
# Copy this file to .env and fill in your values

# Database
MONGO_URI=your_production_mongodb_uri

# Server
PORT=8080

# Security
JWT_SECRET=generate_a_new_secure_secret_for_production

# URLs (REQUIRED for production)
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.fly.dev

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_EMAIL=
SMTP_PASSWORD=
FROM_EMAIL=
FROM_NAME=Infoloker Support

# Google OAuth
GOOGLE_CLIENT_ID=

# Admin (for seeding)
ADMIN_EMAIL=admin@infoloker.com
ADMIN_PASSWORD=change_this_secure_password

# Midtrans Payment (PRODUCTION)
MIDTRANS_SERVER_KEY=your_production_server_key
MIDTRANS_CLIENT_KEY=your_production_client_key
MIDTRANS_IS_PRODUCTION=true

# Redis (Caching)
REDIS_URL=your_production_redis_url

# Feature Flags
ENABLE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL_PUBLIC_JOBS=300
CACHE_TTL_JOB_DETAIL=1800
